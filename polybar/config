[bar/mainbar-i3]
enable-ipc = true
top = true
monitor = ${env:MONITORS[0]:eDP1}
width = 100%
height = 27
dpi = 192

background = #1f1f1f
foreground = #eee

line-size = 1

padding-left = 0
padding-right = 0
module-margin-left = 3
module-margin-right = 3

margin-top = 5
margin-left = 5
margin-right = 5
margin-bottom = 5

separator = ""

modules-right = pulseaudio datetime battery
modules-left = i3 cpu memory

font-0 = CaskaydiaCove\ Nerd\ Font\ Mono:size=6
font-1 = JetBrainsMono\ Nerd\ Font\ Mono:size=6
font-2 = JetBrainsMono\ Nerd\ Font\ Mono:size=7
font-4 = "FontAwesome:size=12;1"

tray-position = right
wm-restack = i3

[colors]
; Nord theme ============
background = #282c34
foreground = #abb2bf
alert = #bd2c40
volume-min = #a3be8c
